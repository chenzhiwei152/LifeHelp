<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/color_f6c01c" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/color_ffffff"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextFourth1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="订单详情" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/TextEight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <View style="@style/divider_dcdcdc_half1" />

            <com.bozhengjianshe.shenghuobang.view.MenuItem
                android:id="@+id/mi_contract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                app:leftText="联系人" />

            <View style="@style/divider_dcdcdc_half1" />

            <com.bozhengjianshe.shenghuobang.view.MenuItem
                android:id="@+id/mi_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                app:leftText="电话" />

            <View style="@style/divider_dcdcdc_half1" />

            <com.bozhengjianshe.shenghuobang.view.MenuItem
                android:id="@+id/mi_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                app:leftText="服务地址" />

            <View style="@style/divider_dcdcdc_half1" />
            <!--商品详情-->
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_list"
                android:layout_height="wrap_content" />
            <com.bozhengjianshe.shenghuobang.view.MenuItem
                android:id="@+id/mi_serviced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                app:leftText="预约服务" />

            <View style="@style/divider_dcdcdc_half1" />

            <com.bozhengjianshe.shenghuobang.view.MenuItem
                android:id="@+id/mi_service_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                app:enterImage="@mipmap/ic_arrow_right"
                app:leftText="具体服务项" />

            <View style="@style/divider_dcdcdc_half1" />

            <com.bozhengjianshe.shenghuobang.view.MenuItem
                android:id="@+id/mi_service_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                app:enterImage="@mipmap/ic_arrow_right"
                app:leftText="服务时间" />

            <View style="@style/divider_dcdcdc_half1" />

            <com.bozhengjianshe.shenghuobang.view.MenuItem
                android:id="@+id/mi_service_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                app:enterImage="@mipmap/ic_arrow_right"
                app:leftText="服务价格" />

            <View style="@style/divider_dcdcdc_half1" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>