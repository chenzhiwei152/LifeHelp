<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bozhengjianshe.shenghuobang.view.TitleBar
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff" />

    <View style="@style/divider_dcdcdc_half1" />

    <com.bozhengjianshe.shenghuobang.view.MenuItemEdittext
        android:id="@+id/mi_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:leftText1="负责人:" />

    <View style="@style/divider_dcdcdc_half1" />

    <com.bozhengjianshe.shenghuobang.view.MenuItemEdittext
        android:id="@+id/mi_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:leftText1="联系电话:" />

    <View style="@style/divider_dcdcdc_half1" />

    <com.bozhengjianshe.shenghuobang.view.MenuItemEdittext
        android:id="@+id/mi_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:leftText1="公司地址:" />

    <View style="@style/divider_dcdcdc_half1" />

    <com.bozhengjianshe.shenghuobang.view.MenuItem
        android:id="@+id/mi_serviced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:leftText="已有服务:" />

    <View style="@style/divider_dcdcdc_half1" />

    <com.bozhengjianshe.shenghuobang.view.MenuItem
        android:id="@+id/mi_service_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:enterImage="@mipmap/ic_arrow_right"
        app:leftText="服务范围:" />

    <View style="@style/divider_dcdcdc_half1" />

    <com.bozhengjianshe.shenghuobang.view.MenuItem
        android:id="@+id/mi_service_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:enterImage="@mipmap/ic_arrow_right"
        app:leftText="服务内容:" />

    <View style="@style/divider_dcdcdc_half1" />

</LinearLayout>