<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <com.bozhengjianshe.shenghuobang.view.TitleBar
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff" />


    <com.bozhengjianshe.shenghuobang.view.MenuItemEdittext
        android:id="@+id/mi_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:editTextHint="请输入负责人姓名"
        app:leftText1="负责人" />


    <com.bozhengjianshe.shenghuobang.view.MenuItemEdittext
        android:id="@+id/mi_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:editTextHint="请输入负责人联系电话"
        app:leftText1="联系电话" />

    <View
        style="@style/divider_dcdcdc_half1"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15" />

    <com.bozhengjianshe.shenghuobang.view.MenuItemEdittext
        android:id="@+id/mi_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:editTextHint="请输入公司地址"
        app:leftText1="公司地址" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="0.5dp"
            android:background="@drawable/bg_line_f6c11b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:text="已有服务商"
            android:textColor="@color/color_f6c11b"
            android:textSize="15sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="0.5dp"
            android:background="@drawable/bg_line_f6c11b" />

    </LinearLayout>

    <com.bozhengjianshe.shenghuobang.view.MenuItem
        android:id="@+id/mi_serviced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:leftText="已有服务" />


    <com.bozhengjianshe.shenghuobang.view.MenuItem
        android:id="@+id/mi_service_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:enterImage="@mipmap/ic_arrow_down_yellow"
        app:leftText="服务范围"
        app:rightHintText="请选择服务范围" />


    <com.bozhengjianshe.shenghuobang.view.MenuItem
        android:id="@+id/mi_service_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        app:editTextHint="请输入公司地址"
        app:enterImage="@mipmap/ic_arrow_down_yellow"
        app:leftText="服务内容"
        app:rightHintText="请选择服务内容" />

    <View
        style="@style/divider_dcdcdc_half1"
        android:layout_marginRight="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_add_service" />

        <TextView
            style="@style/Textb3b3b3_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="增加服务内容" />

    </LinearLayout>
</LinearLayout>